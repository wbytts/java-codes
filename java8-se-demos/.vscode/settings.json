{
    "editor.fontSize": 16,
    // JDK路径
    // 注：插件 Language Support for Java(TM) by Red Hat 需要的最低的JDK版本是 11 
    // 可以安装 0.64.1 版本
    "java.home": "C:\\Program Files\\Java\\jdk-11.0.9",
    // Java调试器的日志级别。
	"java.debug.logLevel": "warn",
	// 指定的控制台用于启动Java程序。如果要为特定的调试会话自定义控制台，请修改launch.json中的“console”配置。
	//  - internalConsole: VS Code调试控制台（不支持输入流）。
	//  - integratedTerminal: VS Code集成终端。
	//  - externalTerminal: 外部终端（可在用户设置中修改）。
    "java.debug.settings.console": "integratedTerminal",
    // Java运行时环境配置
    "java.configuration.runtimes": [{
        "name": "JavaSE-1.8",
        "path": "C:\\Program Files\\Java\\jdk1.8.0_271\\jre",
        "default": true
    }, ],
    "java.configuration.updateBuildConfiguration": "interactive",
    // Java开发环境
    "java.trace.server": "messages",
    "java.dependency.showMembers": true,
    // 启动Java程序的默认VM参数。例如，使用'-Xmx1G -ea'将堆大小增加到1GB并启用断言。如果要为特定的调试会话定制VM参数，请修改launch.json中的'vmArgs'配置。
    "java.debug.settings.vmArgs": "-Dfile.encoding=utf8 -Xmx1G -ea",
    // Maven可执行程序 mvn 的位置
    "maven.executable.path": "D:\\apache-maven-3.6.2\\bin\\mvn.cmd",
    // Maven 配置文件的位置
    "maven.settingsFile": "D:\\apache-maven-3.6.2\\conf\\settings.xml",
    // Maven 控制台是否使用 JavaHome
    "maven.terminal.useJavaHome": true,
    // Maven 运行的配置
    "maven.executable.options": "-s D:\\apache-maven-3.6.2\\conf\\settings.xml",
    // Maven 视图
    "maven.view": "hierarchical",
    // Java Test 配置
    // "java.test.config": {
    //     "classPaths": [
    //         "$Auto"
    //     ]
    // }
}